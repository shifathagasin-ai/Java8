import java.io.*;
import java.util.*;
public class solution{
    public static int reverseNumber(int n){
        int reverse=0;
        while(n!=0){
            int digit=n%10;
            reverse=reverse*10+digit;
            n=n/10;
        }
        return reverse;
    }
    public static void main(String[] args){
        Scanner s=new Scanner(System.in);
        int n=s.nextInt();
        int result=reverseNumber(n);
        System.out.print(result);
    }
}
